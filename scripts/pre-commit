#!/bin/bash

set -e

echo "Running pre-commit checks..."

# Run cargo fmt with nightly
echo "ğŸ¨ Running cargo fmt..."
if ! cargo +nightly fmt --all -- --check; then
  echo "âŒ Code formatting issues found. Run 'cargo +nightly fmt --all' to fix them."
  exit 1
fi

# Run clippy
echo "ğŸ“ Running cargo clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
  echo "âŒ Clippy found issues. Please fix them before committing."
  exit 1
fi

./scripts/cargo-deps.sh
./scripts/cargo-sort.sh
echo "âœ… All pre-commit checks passed!"
